{
    "name": "twin-pizza-hub",
    "version": "1.0.0",
    "description": "Twin Pizza - All-in-One Desktop Application",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder --win",
        "build:dir": "electron-builder --win --dir"
    },
    "author": "Twin Pizza",
    "license": "MIT",
    "dependencies": {
        "@supabase/supabase-js": "^2.95.2",
        "@whiskeysockets/baileys": "^6.7.0",
        "axios": "^1.6.0",
        "dotenv": "^16.4.5",
        "electron-store": "^8.1.0",
        "escpos": "^3.0.0-alpha.6",
        "escpos-usb": "^3.0.0-alpha.4",
        "qrcode-terminal": "^0.12.0"
    },
    "devDependencies": {
        "electron": "^34.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.twinpizza.hub",
        "productName": "Twin Pizza Hub",
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "assets/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/**/*",
            "assets/**/*"
        ]
    }
}
